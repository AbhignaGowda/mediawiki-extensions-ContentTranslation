{
	"extends": "stylelint-config-wikimedia",
	"rules": {
		"selector-class-pattern": "(^(mw|oo-ui|cx|sx|ve|skin|uls|client|card)-|card|card__|(new$)|^(bounce|decrease|disabled|flex-around|increase|last-updated|placeholder|printfooter|selected|separator|source-title|status|status-deleted|status-published|sticky|suggestion|suggestion-desc|suggestion-details|suggestion-image|suggestion-langs|suggestion-title|tail|target|target-title|translation-filter|translation-link)$)",
		"no-unknown-animations": null,
		"no-descending-specificity": null,
		"declaration-property-unit-disallowed-list": null
	}
}
